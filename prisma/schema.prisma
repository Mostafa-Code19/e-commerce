generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(cuid())
  title String
  thumbnail String
  gallery Image[]
  description String?
  colors Color[]
  sizes Size[]
  price Int
  discount Int @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Image {
  id  String @id @default(cuid())
  src String @default("/product/")
  alt String
  product Product @relation(fields: [product_id], references: [id])
  product_id String
  created_at DateTime @default(now())
}

model Color {
  id String @id @default(cuid())
  color String
  product Product[]
  created_at DateTime @default(now())
}

model Size {
  id String @id @default(cuid())
  size Int
  product Product[]
  created_at DateTime @default(now())
}